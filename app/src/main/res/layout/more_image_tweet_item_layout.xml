<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/tweet_base_view_bottom_padding">

    <include layout="@layout/base_tweet_item_layout" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tweet_single_image_left_margin"
            android:layout_marginStart="@dimen/tweet_single_image_left_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/more_image_image1"
                android:layout_width="@dimen/tweet_more_image_width"
                android:layout_height="@dimen/tweet_more_image_height"
                android:layout_marginEnd="@dimen/tweet_more_image_margin"
                android:layout_marginRight="@dimen/tweet_more_image_margin"
                android:contentDescription="@string/tweet_more_images_des" />

            <ImageView
                android:id="@+id/more_image_image2"
                android:layout_width="@dimen/tweet_more_image_width"
                android:layout_height="@dimen/tweet_more_image_height"
                android:layout_marginEnd="@dimen/tweet_more_image_margin"
                android:layout_marginRight="@dimen/tweet_more_image_margin"
                android:contentDescription="@string/tweet_more_images_des" />

            <ImageView
                android:id="@+id/more_image_image3"
                android:layout_width="@dimen/tweet_more_image_width"
                android:layout_height="@dimen/tweet_more_image_height"
                android:contentDescription="@string/tweet_more_images_des" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tweet_single_image_left_margin"
            android:layout_marginStart="@dimen/tweet_single_image_left_margin"
            android:layout_marginTop="@dimen/tweet_more_image_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/more_image_image4"
                android:layout_width="@dimen/tweet_more_image_width"
                android:layout_height="@dimen/tweet_more_image_height"
                android:layout_marginEnd="@dimen/tweet_more_image_margin"
                android:layout_marginRight="@dimen/tweet_more_image_margin"
                android:contentDescription="@string/tweet_more_images_des" />

            <ImageView
                android:id="@+id/more_image_image5"
                android:layout_width="@dimen/tweet_more_image_width"
                android:layout_height="@dimen/tweet_more_image_height"
                android:layout_marginEnd="@dimen/tweet_more_image_margin"
                android:layout_marginRight="@dimen/tweet_more_image_margin"
                android:contentDescription="@string/tweet_more_images_des" />

            <ImageView
                android:id="@+id/more_image_image6"
                android:layout_width="@dimen/tweet_more_image_width"
                android:layout_height="@dimen/tweet_more_image_height"
                android:contentDescription="@string/tweet_more_images_des" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tweet_more_image_margin"
            android:layout_marginLeft="@dimen/tweet_single_image_left_margin"
            android:layout_marginStart="@dimen/tweet_single_image_left_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/more_image_image7"
                android:layout_width="@dimen/tweet_more_image_width"
                android:layout_height="@dimen/tweet_more_image_height"
                android:layout_marginEnd="@dimen/tweet_more_image_margin"
                android:layout_marginRight="@dimen/tweet_more_image_margin"
                android:contentDescription="@string/tweet_more_images_des" />

            <ImageView
                android:id="@+id/more_image_image8"
                android:layout_width="@dimen/tweet_more_image_width"
                android:layout_height="@dimen/tweet_more_image_height"
                android:layout_marginEnd="@dimen/tweet_more_image_margin"
                android:layout_marginRight="@dimen/tweet_more_image_margin"
                android:contentDescription="@string/tweet_more_images_des" />

            <ImageView
                android:id="@+id/more_image_image9"
                android:layout_width="@dimen/tweet_more_image_width"
                android:layout_height="@dimen/tweet_more_image_height"
                android:contentDescription="@string/tweet_more_images_des" />
        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/tweet_comments_layout" />
</LinearLayout>