<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/earth"
    	android:background="@color/transparent"
        android:scaleType="matrix"
        android:layout_centerHorizontal="true">
    </ImageView>
	<RelativeLayout 
	    android:id="@+id/new_main"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:background="@color/transparent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="70dp">
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="60dp"
	    android:layout_height="60dp"
	    android:background="@color/transparent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="70dp">
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="31.5dp"
	    android:layout_height="31.5dp"
	    android:background="@color/transparent"
        android:layout_centerVertical="true"
	    android:layout_marginTop="7.6dp"
        android:layout_marginLeft="84.3dp">
	    >
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/refresh_view_bg"
	    android:layout_toRightOf="@+id/new_main"
	    android:layout_marginLeft="-1dp"
	    >
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="71dp"
	    android:layout_height="match_parent"
	    android:background="@color/refresh_view_bg"
	    >
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/refresh_view_bg"
	    >
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/refresh_view_bg"
	    android:layout_alignParentBottom="true"
	    >
	</RelativeLayout>
	<com.thinker.dora.wechatmomentsdemo.view.RoundProgress
        android:id="@+id/roundProgressBar"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="81dp"
        android_custom:roundColor="@color/transparent"
        android_custom:roundWidth="1.5dp"
        android_custom:textIsDisplayable="false" />
</RelativeLayout>